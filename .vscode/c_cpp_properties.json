{
    "version": 4,
    "env": {
        "DefaultIncludePath": [
            "${workspaceFolder}/vendor/imgui",
            "${workspaceFolder}/vendor/glfw/include",
            "${workspaceFolder}/sp-foundation/src",
            "${workspaceFolder}/sp-physics/src",
            "${workspaceFolder}/sp-frontend/src",
            "${workspaceFolder}/sp-physics/test/src",
            "${workspaceFolder}/vendor/googletest/googletest/include",
            "${workspaceFolder}/vendor/include"
        ],
        "DefaultDefines": [
            "UNIX",
            "ENV_64BITS",
            "API_EXPORT",
            "GLFW_ENABLED",
            "OPENCL_ENABLED",
            "GOOGLETEST_ENABLED",
            "-Wno-dangling-else"
        ]
    },
    "configurations": [
        {
            "name": "Mac",
            "includePath": ["${DefaultIncludePath}"],
            "defines": [ 
                "${DefaultDefines}",
                "UNIX"
            ],
            "macFrameworkPath": [
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c11",
            "cppStandard": "c++11",
            "intelliSenseMode": "clang-x64"
        },
        {
            "name": "Linux",
            "includePath": ["${DefaultIncludePath}"],
            "defines": [
                "${DefaultDefines}",
                "LINUX"
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c11",
            "cppStandard": "c++11",
            "intelliSenseMode": "gcc-x64"
        },
        {
            "name": "Win32",
            "includePath": [
                "${DefaultIncludePath}",
                "C:/Program Files (x86)/Microsoft Visual Studio 14.0/VC/include"
            ],
            "defines": [
                "${DefaultDefines}",
                "WINDOWS"
            ],
            "compilerPath": "C:/Program Files (x86)/Microsoft Visual Studio/2019/BuildTools/VC/Tools/MSVC/14.24.28314/bin/Hostx64/x64/cl.exe",
            "cStandard": "c11",
            "cppStandard": "c++11",
            "intelliSenseMode": "msvc-x64"
        }
    ]
}